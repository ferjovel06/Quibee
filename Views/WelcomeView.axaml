<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Quibee.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="Quibee.Views.WelcomeView"
             x:DataType="vm:WelcomeViewModel">
    
    <!-- ============================================ -->
    <!-- ESTILOS PERSONALIZADOS                      -->
    <!-- ============================================ -->
    <UserControl.Styles>
        <!-- Estilo del botón principal de bienvenida -->
        <Style Selector="Button.welcomeButton">
            <Setter Property="Background" Value="#D51A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource LilitaOne}"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.welcomeButton:pointerover">
            <Setter Property="Background" Value="#D62839"/>
        </Style>
    </UserControl.Styles>

    <!-- ============================================ -->
    <!-- CONTENEDOR PRINCIPAL                        -->
    <!-- Grid base con fondo y capas superpuestas    -->
    <!-- ============================================ -->
    <!-- Contenedor principal con scroll y escalado responsivo -->
    <Border Background="#311B42">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <!-- Viewbox permite escalar el contenido en pantallas pequeñas -->
            <Viewbox Stretch="Uniform" StretchDirection="Both">
                <Grid Width="1200" Height="700"> <!-- canvas virtual para mantener proporciones -->
                    <!-- CAPA DECORATIVA - Elementos espaciales -->
                    <Grid>
                        <!-- Números decorativos - con Max sizes para responder -->
                        <Image Source="/Assets/Images/2.png" 
                               MaxWidth="120" MaxHeight="120"
                               HorizontalAlignment="Right" VerticalAlignment="Bottom"
                               Margin="0,0,0,200"
                               RenderOptions.BitmapInterpolationMode="HighQuality"/>
                        
                        <Image Source="/Assets/Images/3.png" 
                               MaxWidth="140" MaxHeight="140"
                               HorizontalAlignment="Right" VerticalAlignment="Bottom"
                               Margin="0,0,500,0"
                               RenderOptions.BitmapInterpolationMode="HighQuality"/>

                        <!-- Elementos celestes principales con Max sizes y Stretch -->
                        <Image Source="/Assets/Images/Earth.png" MaxWidth="200" MaxHeight="200"
                               HorizontalAlignment="Left" VerticalAlignment="Bottom"
                               Margin="0,0,0,0" Opacity="0.9" Stretch="Uniform"/>

                        <Image Source="/Assets/Images/Saturn.png" MaxWidth="300" MaxHeight="300"
                               HorizontalAlignment="Right" VerticalAlignment="Top"
                               Margin="0,0,0,0" Opacity="0.95" Stretch="Uniform"/>
                    </Grid>

                    <!-- CAPA DE CONTENIDO - Layout principal (proporcionado dentro del Viewbox) -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Row="0" Grid.Column="0"
                               Source="/Assets/Images/ShootingStar.png"
                               MaxWidth="320" MaxHeight="320"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="80,5,0,0"
                               RenderOptions.BitmapInterpolationMode="HighQuality"/>

                        <!-- Robot Quibee - Mascota principal (izquierda centro) -->
                        <Border Grid.Row="0" Grid.RowSpan="5" Grid.Column="0"
                                MaxWidth="360" MaxHeight="450"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="50,0,0,0">
                            <Image Source="/Assets/Images/Robot.png"
                                Stretch="Uniform"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                RenderOptions.BitmapInterpolationMode="HighQuality"/>
                        </Border>

                        <!-- Número 3 decorativo - Sobre el saludo -->
                        <Image Grid.Row="0" Grid.Column="1"
                               Source="/Assets/Images/1.png" 
                               MaxWidth="140" MaxHeight="140"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="100,0,0,0" 
                               RenderOptions.BitmapInterpolationMode="HighQuality"/>

                        <!-- CONTENIDO TEXTUAL -->
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                  Text="Bienvenido"
                                  FontFamily="{StaticResource LilitaOne}"
                                  FontSize="48"
                                  Foreground="#F25E67"
                                  HorizontalAlignment="Left"
                                  Margin="0,0,0,10">
                            <TextBlock.RenderTransform>
                                <RotateTransform Angle="-3"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>

                        <StackPanel Grid.Row="2" Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,40"
                                    Spacing="0"
                                    RenderTransformOrigin="0.5,0.5">
                            <StackPanel.RenderTransform>
                                <RotateTransform Angle="-3"/>
                            </StackPanel.RenderTransform>
                            <TextBlock Text="Matemáticas"
                                      FontFamily="{StaticResource LilitaOne}"
                                      FontSize="100"
                                      Foreground="#F2F2F2"
                                      HorizontalAlignment="Left"
                                      TextAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Spacing="15">
                                <TextBlock Text="con"
                                          FontFamily="{StaticResource LilitaOne}"
                                          FontSize="100"
                                          Foreground="#F2F2F2"/>
                                <TextBlock Text="Q-BIT"
                                          FontFamily="{StaticResource LilitaOne}"
                                          FontSize="100"
                                          Foreground="#7CDAF3"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Row="3" Grid.Column="1"
                               Classes="welcomeButton"
                               Content="Inicio"
                               Command="{Binding StartCommand}"
                               HorizontalAlignment="Left"
                               RenderTransformOrigin="0.5,0.5">
                            <Button.RenderTransform>
                                <RotateTransform Angle="-3"/>
                            </Button.RenderTransform>
                        </Button>
                    </Grid>
                </Grid>
            </Viewbox>
        </ScrollViewer>
    </Border>
</UserControl>
