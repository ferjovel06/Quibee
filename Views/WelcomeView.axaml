<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Quibee.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="Quibee.Views.WelcomeView"
             x:DataType="vm:WelcomeViewModel">
    
    <UserControl.Styles>
        <Style Selector="Button.welcomeButton">
            <Setter Property="Background" Value="#D51A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource MoreSugar}"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.welcomeButton:pointerover">
            <Setter Property="Background" Value="#D62839"/>
        </Style>
    </UserControl.Styles>

        <!-- Contenedor principal que ocupa toda la pantalla -->
    <Grid>
        <!-- Fondo con color morado oscuro -->
        <Border Background="#311B42"/>
        
        <!-- Grid para elementos decorativos de fondo (responsivo) -->
        <Grid>
            <!-- Estrellas decorativas distribuidas proporcionalmente -->
            <!-- Esquina superior izquierda -->
            <Image Source="/Assets/Images/Star.png" Width="24" Height="24"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="50,350,0,0" Opacity="0.8"/>
            <Image Source="/Assets/Images/Star.png" Width="24" Height="24"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="250,100,0,0" Opacity="0.8"/>
            
            <!-- Parte superior central-derecha -->
            <Image Source="/Assets/Images/Star.png" Width="24" Height="24"
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="200,80,0,0" Opacity="0.9"/>
            <Image Source="/Assets/Images/Star.png" Width="24" Height="24"
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="0,150,100,0" Opacity="0.7"/>
            
            <!-- Esquina superior derecha -->
            <Image Source="/Assets/Images/Star.png" Width="24" Height="24"
                   HorizontalAlignment="Right" VerticalAlignment="Top"
                   Margin="0,80,100,0" Opacity="0.8"/>
            <Image Source="/Assets/Images/Star.png" Width="24" Height="24"
                   HorizontalAlignment="Right" VerticalAlignment="Top"
                   Margin="0,200,200,0" Opacity="0.8"/>
            
            <!-- Parte inferior -->
            <Image Source="/Assets/Images/Star.png" Width="24" Height="24"
                   HorizontalAlignment="Left" VerticalAlignment="Bottom"
                   Margin="150,0,0,250" Opacity="0.6"/>
            <Image Source="/Assets/Images/Star.png" Width="24" Height="24"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   Margin="0,0,300,150" Opacity="0.9"/>
            
            <!-- Números flotantes decorativos -->
            <!-- Superior derecho -->
            <Image Source="/Assets/Images/1.png" 
                   Width="140" Height="140"
                   HorizontalAlignment="Right" VerticalAlignment="Top"
                   Margin="0,140,0,0"
                   RenderOptions.BitmapInterpolationMode="HighQuality"/>
            
            <!-- Superior derecho -->
            <Image Source="/Assets/Images/5.png" 
                   Width="120" Height="120"
                   HorizontalAlignment="Right" VerticalAlignment="Top"
                   Margin="0,0,200,0"
                   RenderOptions.BitmapInterpolationMode="HighQuality"/>
            
            <Image Source="/Assets/Images/6.png" 
                   Width="120" Height="120"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   Margin="0,0,600,0"
                   RenderOptions.BitmapInterpolationMode="HighQuality"/>
            
            <!-- Luna en la esquina inferior izquierda -->
            <Image Source="/Assets/Images/Moon.png" Width="240" Height="240"
                   HorizontalAlignment="Left" VerticalAlignment="Bottom"
                   Margin="0,0,0,0" Opacity="0.9"/>

            <!-- Agujero negro en la esquina inferior derecha -->
            <Image Source="/Assets/Images/Blackhole.png" Width="300" Height="300"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   Margin="0,0,0,0" Opacity="0.95"/>
        </Grid>

        <!-- Contenido principal -->
        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Meteorito arriba del robot -->
            <Image Grid.Row="0" Grid.Column="0"
                   Source="/Assets/Images/Meteor.png"
                   Width="320" Height="320"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="80,5,0,0"
                   RenderOptions.BitmapInterpolationMode="HighQuality"/>

            <!-- Robot QUIBEE (izquierda) -->
            <Border Grid.Row="0" Grid.RowSpan="5" Grid.Column="0"
                    Width="300" Height="375"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="50,0,0,0">
                <!-- Imagen del robot QUIBEE -->
                <Image Source="/Assets/Images/Robot.png"
                    Stretch="Uniform"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    RenderOptions.BitmapInterpolationMode="HighQuality"/>
            </Border>

            <!-- Imagen del número 3 arriba de "Bienvenido" -->
            <Image Grid.Row="0" Grid.Column="1"
                   Source="/Assets/Images/3.png" 
                   Width="120" Height="120"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="100,0,0,0" 
                   RenderOptions.BitmapInterpolationMode="HighQuality"/>

            <!-- Texto "Bienvenido" -->
            <TextBlock Grid.Row="1" Grid.Column="1"
                      Text="Bienvenido"
                      FontFamily="{StaticResource LilitaOne}"
                      FontSize="48"
                      Foreground="#F25E67"
                      HorizontalAlignment="Left"
                      Margin="0,0,0,10">
                <TextBlock.RenderTransform>
                    <RotateTransform Angle="-3"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <!-- Texto "Matemáticas" y "con QUIBEE" en dos líneas -->
            <StackPanel Grid.Row="2" Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,0,0,40"
                        Spacing="0"
                        RenderTransformOrigin="0.5,0.5">
                <StackPanel.RenderTransform>
                    <RotateTransform Angle="-3"/>
                </StackPanel.RenderTransform>
                <TextBlock Text="Matemáticas"
                          FontFamily="{StaticResource LilitaOne}"
                          FontSize="100"
                          Foreground="#F2F2F2"
                          HorizontalAlignment="Left"
                          TextAlignment="Center"/>
                <TextBlock Text="con QUIBEE"
                          FontFamily="{StaticResource LilitaOne}"
                          FontSize="100"
                          Foreground="#F2F2F2"
                          HorizontalAlignment="Left"
                          TextAlignment="Center"/>
            </StackPanel>

            <!-- Botón Inicio -->
            <Button Grid.Row="3" Grid.Column="1"
                   Classes="welcomeButton"
                   Content="Inicio"
                   HorizontalAlignment="Left"
                   RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <RotateTransform Angle="-3"/>
                </Button.RenderTransform>
            </Button>
        </Grid>
    </Grid>
</UserControl>
