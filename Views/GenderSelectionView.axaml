<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Quibee.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="Quibee.Views.GenderSelectionView"
             x:DataType="vm:GenderSelectionViewModel">
    
    <!-- ============================================ -->
    <!-- ESTILOS PERSONALIZADOS                      -->
    <!-- ============================================ -->
    <UserControl.Styles>
        <!-- Estilo para botones de selección de género -->
        <Style Selector="Button.genderButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style Selector="Button.genderButton:pointerover">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <!-- Estilo para el borde del botón de género -->
        <Style Selector="Border.genderCard">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="Padding" Value="30"/>
        </Style>
        <Style Selector="Border.genderCard:pointerover">
            <Setter Property="Background" Value="#FFFFFF20"/>
            <Setter Property="BorderBrush" Value="#FFFFFF40"/>
        </Style>
        
        <!-- Estilo para texto de género -->
        <Style Selector="TextBlock.genderLabel">
            <Setter Property="FontFamily" Value="{StaticResource LilitaOne}"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Styles>

    <!-- ============================================ -->
    <!-- CONTENEDOR PRINCIPAL                         -->
    <!-- ============================================ -->
    <Border Background="#311B42">
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <Grid MinWidth="800" MaxWidth="1400" Margin="20">
                
                <!-- Grid principal centrado -->
                <Grid Margin="40">
                    
                    <!-- ============================================ -->
                    <!-- ELEMENTOS DECORATIVOS                        -->
                    <!-- ============================================ -->
                    
                    <!-- Telescopio (esquina superior izquierda) -->
                    <Border Width="130" Height="130"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="20,20,0,0">
                        <Image Source="/Assets/Images/Telescope.png"
                               Stretch="Uniform"
                               RenderOptions.BitmapInterpolationMode="HighQuality"/>
                    </Border>
                    
                    <!-- Estrella fugaz invertida (esquina superior derecha) -->
                    <Border Width="100" Height="100"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,10,40,0">
                        <Image Source="/Assets/Images/ShootingStarInverted.png"
                               Stretch="Uniform"
                               RenderOptions.BitmapInterpolationMode="HighQuality"/>
                    </Border>
                    
                    <!-- Número 4 (centro vertical izquierda) -->
                    <Border Width="80" Height="80"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="40,150,0,0">
                        <Image Source="/Assets/Images/4.png"
                               Stretch="Uniform"
                               RenderOptions.BitmapInterpolationMode="HighQuality"/>
                    </Border>
                    
                    <!-- Número 5 (derecha) -->
                    <Border Width="80" Height="80"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,50,0">
                        <Image Source="/Assets/Images/5.png"
                               Stretch="Uniform"
                               RenderOptions.BitmapInterpolationMode="HighQuality"/>
                    </Border>
                    
                    <!-- Número 6 (centro inferior) -->
                    <Border Width="80" Height="80"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,10">
                        <Image Source="/Assets/Images/6.png"
                               Stretch="Uniform"
                               RenderOptions.BitmapInterpolationMode="HighQuality"/>
                    </Border>
                    
                    <!-- ============================================ -->
                    <!-- CONTENIDO PRINCIPAL                          -->
                    <!-- ============================================ -->
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Spacing="50"
                                Margin="0,-50,0,0">
                        
                        <!-- Título -->
                        <TextBlock Text="¿Cuál es tu género?"
                                   FontFamily="{StaticResource LilitaOne}"
                                   FontSize="56"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                        
                        <!-- Opciones de género -->
                        <Grid ColumnDefinitions="*,60,*" HorizontalAlignment="Center">
                            
                            <!-- Opción Masculino -->
                            <Button Grid.Column="0"
                                    Classes="genderButton"
                                    Command="{Binding SelectMasculinoCommand}">
                                <Border Classes="genderCard">
                                    <StackPanel Spacing="20">
                                        <!-- Icono robot azul -->
                                        <Border Width="270" Height="270">
                                            <Image Source="/Assets/Images/RobotHead.png"
                                                   Stretch="Uniform"
                                                   RenderOptions.BitmapInterpolationMode="HighQuality"/>
                                        </Border>
                                        
                                        <!-- Texto -->
                                        <TextBlock Text="Masculino"
                                                   Classes="genderLabel"/>
                                    </StackPanel>
                                </Border>
                            </Button>
                            
                            <!-- Opción Femenino -->
                            <Button Grid.Column="2"
                                    Classes="genderButton"
                                    Command="{Binding SelectFemeninoCommand}">
                                <Border Classes="genderCard">
                                    <StackPanel Spacing="20">
                                        <!-- Icono robot rosa -->
                                        <Border Width="270" Height="270">
                                            <Image Source="/Assets/Images/PinkRobotHead.png"
                                                   Stretch="Uniform"
                                                   RenderOptions.BitmapInterpolationMode="HighQuality"/>
                                        </Border>
                                        
                                        <!-- Texto -->
                                        <TextBlock Text="Femenino"
                                                   Classes="genderLabel"/>
                                    </StackPanel>
                                </Border>
                            </Button>
                            
                        </Grid>
                        
                    </StackPanel>
                    
                </Grid>
                
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>
