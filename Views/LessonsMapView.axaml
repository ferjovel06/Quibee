<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Quibee.ViewModels"
             xmlns:models="using:Quibee.Models"
             x:Class="Quibee.Views.LessonsMapView"
             x:DataType="vm:LessonsMapViewModel">

    <Border Background="#311B42">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                     VerticalScrollBarVisibility="Auto">
            <Viewbox Stretch="Uniform">
                <Grid Width="1200" Height="700">
                    
                    <!-- BARRA DE NAVEGACIÓN SUPERIOR -->
                    <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Top"
                              Margin="0,30,0,0"
                              Spacing="30">
                        
                        <!-- Botón Inicio -->
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Cursor="Hand"
                               Command="{Binding InicioCommand}">
                            <TextBlock Text="Inicio"
                                     FontFamily="{StaticResource LilitaOne}"
                                     FontSize="24"
                                     Foreground="White"/>
                        </Button>

                        <!-- Botón Lecciones (activo) -->
                        <Button Background="White"
                               BorderThickness="0"
                               CornerRadius="20"
                               Padding="30,10"
                               Cursor="Hand">
                            <TextBlock Text="Lecciones"
                                     FontFamily="{StaticResource LilitaOne}"
                                     FontSize="24"
                                     Foreground="#311B42"/>
                        </Button>

                        <!-- Botón Manual -->
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Cursor="Hand"
                               Command="{Binding ManualCommand}">
                            <TextBlock Text="Manual"
                                     FontFamily="{StaticResource LilitaOne}"
                                     FontSize="24"
                                     Foreground="White"/>
                        </Button>

                        <!-- Botón Usuario -->
                        <Button Background="#D51A52"
                               BorderThickness="0"
                               CornerRadius="20"
                               Padding="30,10"
                               Cursor="Hand"
                               Command="{Binding UsuarioCommand}">
                            <TextBlock Text="Usuario"
                                     FontFamily="{StaticResource LilitaOne}"
                                     FontSize="24"
                                     Foreground="White"/>
                        </Button>
                    </StackPanel>

                    <!-- TÍTULO -->
                    <TextBlock Text="{Binding TituloLecciones}"
                             FontFamily="{StaticResource LilitaOne}"
                             FontSize="38"
                             Foreground="White"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Margin="0,80,0,0"/>

                    <!-- CONTENEDOR DEL MAPA DE LECCIONES -->
                    <Border HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="0,0,0,0">
                        <!-- MAPA DE TEMAS CON CANVAS PARA POSICIONAMIENTO ABSOLUTO -->
                        <Canvas Width="1200" Height="700">
                        
                            <!-- LÍNEAS CURVAS CONECTORAS (por ahora hardcodeadas según grado) -->
                            <!-- TODO: Hacer dinámicas en el futuro -->
                        
                            <!-- Curva Tema 1 → Tema 2 -->
                            <Path Stroke="White" StrokeThickness="3" StrokeDashArray="5,5">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="950,170"
                                                    IsClosed="False">
                                            <BezierSegment Point1="870,320" Point2="820,220" Point3="770,270"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            
                            <!-- Curva Tema 2 → Tema 3 -->
                            <Path Stroke="White" StrokeThickness="3" StrokeDashArray="5,5">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="720,300"
                                                    IsClosed="False">
                                            <BezierSegment Point1="650,340" Point2="720,400" Point3="600,450"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            
                            <!-- Curva Tema 3 → Tema 4 -->
                            <Path Stroke="White" StrokeThickness="3" StrokeDashArray="5,5">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="600,450"
                                                    IsClosed="False">
                                            <BezierSegment Point1="560,540" Point2="480,350" Point3="420,380"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            
                            <!-- Curva Tema 4 → Tema 5 -->
                            <Path Stroke="White" StrokeThickness="3" StrokeDashArray="5,5">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="420,380"
                                                    IsClosed="False">
                                            <BezierSegment Point1="370,420" Point2="330,480" Point3="330,540"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>

                            <!-- TEMAS DINÁMICOS (con reflection binding) -->
                            
                            <!-- Tema 1 -->
                            <Button Background="Transparent"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   Canvas.Left="{Binding Tema1.PositionX}"
                                   Canvas.Top="{Binding Tema1.PositionY}"
                                   Command="{Binding Tema1Command}">
                                <StackPanel Orientation="Horizontal" Spacing="10"
                                           IsVisible="{Binding Tema1.TextOnLeft}">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Tema1.Title}"
                                                 FontFamily="{StaticResource LilitaOne}"
                                                 FontSize="18"
                                                 Foreground="White"
                                                 TextAlignment="Right"/>
                                        <TextBlock Text="{Binding Tema1.Description}"
                                                 FontFamily="{StaticResource LilitaOne}"
                                                 FontSize="14"
                                                 Foreground="White"
                                                 TextAlignment="Right"/>
                                    </StackPanel>
                                    <Image Source="{Binding Tema1.Image}"
                                          Width="{Binding Tema1.ImageWidth}"
                                          Height="{Binding Tema1.ImageHeight}"/>
                                </StackPanel>
                            </Button>

                            <!-- Tema 2 -->
                            <Button Background="Transparent"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   Canvas.Left="{Binding Tema2.PositionX}"
                                   Canvas.Top="{Binding Tema2.PositionY}"
                                   Command="{Binding Tema2Command}">
                                <StackPanel Orientation="Horizontal" Spacing="10"
                                           IsVisible="{Binding Tema2.TextOnLeft}">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Tema2.Title}"
                                                 FontFamily="{StaticResource LilitaOne}"
                                                 FontSize="18"
                                                 Foreground="White"
                                                 TextAlignment="Right"/>
                                        <TextBlock Text="{Binding Tema2.Description}"
                                                 FontFamily="{StaticResource LilitaOne}"
                                                 FontSize="14"
                                                 Foreground="White"
                                                 TextAlignment="Right"/>
                                    </StackPanel>
                                    <Image Source="{Binding Tema2.Image}"
                                          Width="{Binding Tema2.ImageWidth}"
                                          Height="{Binding Tema2.ImageHeight}"/>
                                </StackPanel>
                            </Button>

                            <!-- Tema 3 -->
                            <Button Background="Transparent"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   Canvas.Left="{Binding Tema3.PositionX}"
                                   Canvas.Top="{Binding Tema3.PositionY}"
                                   Command="{Binding Tema3Command}">
                                <Panel>
                                    <!-- Layout: Texto a la izquierda, imagen a la derecha -->
                                    <StackPanel Orientation="Horizontal" Spacing="10"
                                               IsVisible="{Binding Tema3.TextOnLeft}">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Tema3.Title}"
                                                     FontFamily="{StaticResource LilitaOne}"
                                                     FontSize="18"
                                                     Foreground="White"
                                                     TextAlignment="Right"/>
                                            <TextBlock Text="{Binding Tema3.Description}"
                                                     FontFamily="{StaticResource LilitaOne}"
                                                     FontSize="14"
                                                     Foreground="White"
                                                     TextAlignment="Right"/>
                                        </StackPanel>
                                        <Image Source="{Binding Tema3.Image}"
                                              Width="{Binding Tema3.ImageWidth}"
                                              Height="{Binding Tema3.ImageHeight}"/>
                                    </StackPanel>
                                    <!-- Layout: Imagen a la izquierda, texto a la derecha -->
                                    <StackPanel Orientation="Horizontal" Spacing="10"
                                               IsVisible="{Binding Tema3.TextOnRight}">
                                        <Image Source="{Binding Tema3.Image}"
                                              Width="{Binding Tema3.ImageWidth}"
                                              Height="{Binding Tema3.ImageHeight}"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Tema3.Title}"
                                                     FontFamily="{StaticResource LilitaOne}"
                                                     FontSize="18"
                                                     Foreground="White"
                                                     TextAlignment="Left"/>
                                            <TextBlock Text="{Binding Tema3.Description}"
                                                     FontFamily="{StaticResource LilitaOne}"
                                                     FontSize="14"
                                                     Foreground="White"
                                                     TextAlignment="Left"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Panel>
                            </Button>

                            <!-- Tema 4 -->
                            <Button Background="Transparent"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   Canvas.Left="{Binding Tema4.PositionX}"
                                   Canvas.Top="{Binding Tema4.PositionY}"
                                   Command="{Binding Tema4Command}">
                                <StackPanel Orientation="Horizontal" Spacing="10"
                                           IsVisible="{Binding Tema4.TextOnLeft}">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Tema4.Title}"
                                                 FontFamily="{StaticResource LilitaOne}"
                                                 FontSize="18"
                                                 Foreground="White"
                                                 TextAlignment="Right"/>
                                        <TextBlock Text="{Binding Tema4.Description}"
                                                 FontFamily="{StaticResource LilitaOne}"
                                                 FontSize="14"
                                                 Foreground="White"
                                                 TextAlignment="Right"/>
                                    </StackPanel>
                                    <Image Source="{Binding Tema4.Image}"
                                          Width="{Binding Tema4.ImageWidth}"
                                          Height="{Binding Tema4.ImageHeight}"/>
                                </StackPanel>
                            </Button>

                            <!-- Tema 5 -->
                            <Button Background="Transparent"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   Canvas.Left="{Binding Tema5.PositionX}"
                                   Canvas.Top="{Binding Tema5.PositionY}"
                                   Command="{Binding Tema5Command}">
                                <Panel>
                                    <!-- Layout: Texto a la izquierda, imagen a la derecha -->
                                    <StackPanel Orientation="Horizontal" Spacing="10"
                                               IsVisible="{Binding Tema5.TextOnLeft}">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Tema5.Title}"
                                                     FontFamily="{StaticResource LilitaOne}"
                                                     FontSize="18"
                                                     Foreground="White"
                                                     TextAlignment="Right"/>
                                            <TextBlock Text="{Binding Tema5.Description}"
                                                     FontFamily="{StaticResource LilitaOne}"
                                                     FontSize="14"
                                                     Foreground="White"
                                                     TextAlignment="Right"/>
                                        </StackPanel>
                                        <Image Source="{Binding Tema5.Image}"
                                              Width="{Binding Tema5.ImageWidth}"
                                              Height="{Binding Tema5.ImageHeight}"/>
                                    </StackPanel>
                                    <!-- Layout: Imagen a la izquierda, texto a la derecha -->
                                    <StackPanel Orientation="Horizontal" Spacing="10"
                                               IsVisible="{Binding Tema5.TextOnRight}">
                                        <Image Source="{Binding Tema5.Image}"
                                              Width="{Binding Tema5.ImageWidth}"
                                              Height="{Binding Tema5.ImageHeight}"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Tema5.Title}"
                                                     FontFamily="{StaticResource LilitaOne}"
                                                     FontSize="18"
                                                     Foreground="White"
                                                     TextAlignment="Left"/>
                                            <TextBlock Text="{Binding Tema5.Description}"
                                                     FontFamily="{StaticResource LilitaOne}"
                                                     FontSize="14"
                                                     Foreground="White"
                                                     TextAlignment="Left"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Panel>
                            </Button>

                        </Canvas>
                    </Border>

                </Grid>
            </Viewbox>
        </ScrollViewer>
    </Border>

</UserControl>
