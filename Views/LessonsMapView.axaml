<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Quibee.ViewModels"
             xmlns:models="using:Quibee.Models"
             xmlns:converters="using:Quibee.Converters"
             x:Class="Quibee.Views.LessonsMapView"
             x:DataType="vm:LessonsMapViewModel"
             x:Name="Root">

    <UserControl.Resources>
        <converters:EdgeToPathGeometryConverter x:Key="EdgeToPathConverter"/>
    </UserControl.Resources>

    <Border Background="#311B42">
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" 
                     VerticalScrollBarVisibility="Auto">
            <Grid Width="1200" MinHeight="{Binding CanvasHeight}">
                    
                    <!-- BARRA DE NAVEGACIÓN SUPERIOR -->
                    <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Top"
                              Margin="0,30,0,0"
                              Spacing="30">
                        
                        <!-- Botón Inicio -->
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Cursor="Hand"
                               Command="{Binding InicioCommand}">
                            <TextBlock Text="Inicio"
                                     FontFamily="{StaticResource LilitaOne}"
                                     FontSize="24"
                                     Foreground="White"/>
                        </Button>

                        <!-- Botón Lecciones (activo) -->
                        <Button Background="White"
                               BorderThickness="0"
                               CornerRadius="20"
                               Padding="30,10"
                               Cursor="Hand">
                            <TextBlock Text="Lecciones"
                                     FontFamily="{StaticResource LilitaOne}"
                                     FontSize="24"
                                     Foreground="#311B42"/>
                        </Button>

                        <!-- Botón Manual -->
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Cursor="Hand"
                               Command="{Binding ManualCommand}">
                            <TextBlock Text="Manual"
                                     FontFamily="{StaticResource LilitaOne}"
                                     FontSize="24"
                                     Foreground="White"/>
                        </Button>

                        <!-- Botón Usuario -->
                        <Button Background="#D51A52"
                               BorderThickness="0"
                               CornerRadius="20"
                               Padding="30,10"
                               Cursor="Hand"
                               Command="{Binding UsuarioCommand}">
                            <TextBlock Text="Usuario"
                                     FontFamily="{StaticResource LilitaOne}"
                                     FontSize="24"
                                     Foreground="White"/>
                        </Button>
                    </StackPanel>

                    <!-- TÍTULO -->
                    <TextBlock Text="{Binding TituloLecciones}"
                             FontFamily="{StaticResource LilitaOne}"
                             FontSize="38"
                             Foreground="White"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Margin="0,80,0,0"/>

                    <!-- CONTENEDOR DEL MAPA DE LECCIONES -->
                    <Border HorizontalAlignment="Center" 
                            VerticalAlignment="Top">
                        <!-- MAPA DE TEMAS CON CANVAS PARA POSICIONAMIENTO ABSOLUTO -->
                        <Canvas Width="1200" Height="{Binding CanvasHeight}">
                        
                            <!-- ===== LÍNEAS CONECTORAS DINÁMICAS (ItemsControl data-driven) ===== -->
                            <!-- Se renderizan ANTES de los nodos para que queden debajo -->
                            <ItemsControl ItemsSource="{Binding Edges}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas Width="1200" Height="{Binding DataContext.CanvasHeight, ElementName=Root}"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="models:TemaEdge">
                                        <Path Stroke="White" 
                                              StrokeThickness="3" 
                                              StrokeDashArray="5,5">
                                            <Path.Data>
                                                <MultiBinding Converter="{StaticResource EdgeToPathConverter}">
                                                    <Binding Path="."/>
                                                    <Binding Path="$parent[UserControl].DataContext"/>
                                                </MultiBinding>
                                            </Path.Data>
                                        </Path>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- ===== NODOS DINÁMICOS (ItemsControl data-driven) ===== -->
                            <ItemsControl ItemsSource="{Binding Nodes}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas Width="1200" Height="{Binding DataContext.CanvasHeight, ElementName=Root}"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="models:ThemeData">
                                        <!-- Usar Button con RenderTransform para posicionar -->
                                        <Button Background="Transparent"
                                               BorderThickness="0"
                                               Cursor="Hand"
                                               Command="{Binding Command}">
                                            <Button.RenderTransform>
                                                <TranslateTransform X="{Binding PositionX}" Y="{Binding PositionY}"/>
                                            </Button.RenderTransform>
                                            <Panel>

                                                    <!-- Layout IZQUIERDA: Texto a la izq, imagen a la der -->
                                                    <StackPanel Orientation="Horizontal"
                                                               Spacing="10"
                                                               IsVisible="{Binding TextOnLeft}">
                                                        <StackPanel VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Title}"
                                                                     FontFamily="{StaticResource LilitaOne}"
                                                                     FontSize="18"
                                                                     Foreground="White"
                                                                     TextAlignment="Right"/>
                                                            <TextBlock Text="{Binding Description}"
                                                                     FontFamily="{StaticResource LilitaOne}"
                                                                     FontSize="14"
                                                                     Foreground="White"
                                                                     TextAlignment="Right"/>
                                                        </StackPanel>
                                                        <!-- OJO: Image (Bitmap), no ImagePath -->
                                                        <Image Source="{Binding Image}"
                                                              Width="{Binding ImageWidth}"
                                                              Height="{Binding ImageHeight}"/>
                                                    </StackPanel>

                                                    <!-- Layout DERECHA: Imagen a la izq, texto a la der -->
                                                    <StackPanel Orientation="Horizontal"
                                                               Spacing="10"
                                                               IsVisible="{Binding TextOnRight}">
                                                        <Image Source="{Binding Image}"
                                                              Width="{Binding ImageWidth}"
                                                              Height="{Binding ImageHeight}"/>
                                                        <StackPanel VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Title}"
                                                                     FontFamily="{StaticResource LilitaOne}"
                                                                     FontSize="18"
                                                                     Foreground="White"
                                                                     TextAlignment="Left"/>
                                                            <TextBlock Text="{Binding Description}"
                                                                     FontFamily="{StaticResource LilitaOne}"
                                                                     FontSize="14"
                                                                     Foreground="White"
                                                                     TextAlignment="Left"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                </Panel>
                                            </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </Canvas>
                    </Border>

            </Grid>
        </ScrollViewer>
    </Border>

</UserControl>
