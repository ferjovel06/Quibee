<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Quibee.ViewModels"
             xmlns:models="using:Quibee.Models"
             x:Class="Quibee.Views.LessonsMapView"
             x:DataType="vm:LessonsMapViewModel">

    <Border Background="#311B42">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                     VerticalScrollBarVisibility="Auto">
            <Viewbox Stretch="Uniform">
                <Grid Width="1200" Height="700">
                    
                    <!-- BARRA DE NAVEGACIÓN SUPERIOR -->
                    <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Top"
                              Margin="0,30,0,0"
                              Spacing="30">
                        
                        <!-- Botón Inicio -->
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Cursor="Hand"
                               Command="{Binding InicioCommand}">
                            <TextBlock Text="Inicio"
                                     FontFamily="{StaticResource LilitaOne}"
                                     FontSize="24"
                                     Foreground="White"/>
                        </Button>

                        <!-- Botón Lecciones (activo) -->
                        <Button Background="White"
                               BorderThickness="0"
                               CornerRadius="20"
                               Padding="30,10"
                               Cursor="Hand">
                            <TextBlock Text="Lecciones"
                                     FontFamily="{StaticResource LilitaOne}"
                                     FontSize="24"
                                     Foreground="#311B42"/>
                        </Button>

                        <!-- Botón Manual -->
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Cursor="Hand"
                               Command="{Binding ManualCommand}">
                            <TextBlock Text="Manual"
                                     FontFamily="{StaticResource LilitaOne}"
                                     FontSize="24"
                                     Foreground="White"/>
                        </Button>

                        <!-- Botón Usuario -->
                        <Button Background="#D51A52"
                               BorderThickness="0"
                               CornerRadius="20"
                               Padding="30,10"
                               Cursor="Hand"
                               Command="{Binding UsuarioCommand}">
                            <TextBlock Text="Usuario"
                                     FontFamily="{StaticResource LilitaOne}"
                                     FontSize="24"
                                     Foreground="White"/>
                        </Button>
                    </StackPanel>

                    <!-- TÍTULO -->
                    <TextBlock Text="{Binding TituloLecciones}"
                             FontFamily="{StaticResource LilitaOne}"
                             FontSize="38"
                             Foreground="White"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Margin="0,80,0,0"/>

                    <!-- CONTENEDOR DEL MAPA DE LECCIONES -->
                    <Border HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="0,0,0,0">
                        <!-- MAPA DE TEMAS CON CANVAS PARA POSICIONAMIENTO ABSOLUTO -->
                        <Canvas Width="1200" Height="700">
                        
                            <!-- LÍNEAS CURVAS CONECTORAS (por ahora hardcodeadas según grado) -->
                            <!-- TODO: Hacer dinámicas en el futuro -->
                        
                            <!-- Curva Tema 1 → Tema 2 -->
                            <Path Stroke="White" StrokeThickness="3" StrokeDashArray="5,5">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="950,170"
                                                    IsClosed="False">
                                            <BezierSegment Point1="870,320" Point2="820,220" Point3="770,270"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            
                            <!-- Curva Tema 2 → Tema 3 -->
                            <Path Stroke="White" StrokeThickness="3" StrokeDashArray="5,5">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="720,300"
                                                    IsClosed="False">
                                            <BezierSegment Point1="650,340" Point2="720,400" Point3="600,450"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            
                            <!-- Curva Tema 3 → Tema 4 -->
                            <Path Stroke="White" StrokeThickness="3" StrokeDashArray="5,5">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="600,450"
                                                    IsClosed="False">
                                            <BezierSegment Point1="560,540" Point2="480,350" Point3="420,380"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            
                            <!-- Curva Tema 4 → Tema 5 -->
                            <Path Stroke="White" StrokeThickness="3" StrokeDashArray="5,5">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="420,380"
                                                    IsClosed="False">
                                            <BezierSegment Point1="370,420" Point2="330,480" Point3="330,540"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>

                            <!-- ===== NODOS DINÁMICOS (ItemsControl data-driven) ===== -->
                            <ItemsControl ItemsSource="{Binding Nodes}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas Width="1200" Height="700"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="models:ThemeData">
                                        <!-- Usar Button con RenderTransform para posicionar -->
                                        <Button Background="Transparent"
                                               BorderThickness="0"
                                               Cursor="Hand"
                                               Command="{Binding Command}">
                                            <Button.RenderTransform>
                                                <TranslateTransform X="{Binding PositionX}" Y="{Binding PositionY}"/>
                                            </Button.RenderTransform>
                                            <Panel>

                                                    <!-- Layout IZQUIERDA: Texto a la izq, imagen a la der -->
                                                    <StackPanel Orientation="Horizontal"
                                                               Spacing="10"
                                                               IsVisible="{Binding TextOnLeft}">
                                                        <StackPanel VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Title}"
                                                                     FontFamily="{StaticResource LilitaOne}"
                                                                     FontSize="18"
                                                                     Foreground="White"
                                                                     TextAlignment="Right"/>
                                                            <TextBlock Text="{Binding Description}"
                                                                     FontFamily="{StaticResource LilitaOne}"
                                                                     FontSize="14"
                                                                     Foreground="White"
                                                                     TextAlignment="Right"/>
                                                        </StackPanel>
                                                        <!-- OJO: Image (Bitmap), no ImagePath -->
                                                        <Image Source="{Binding Image}"
                                                              Width="{Binding ImageWidth}"
                                                              Height="{Binding ImageHeight}"/>
                                                    </StackPanel>

                                                    <!-- Layout DERECHA: Imagen a la izq, texto a la der -->
                                                    <StackPanel Orientation="Horizontal"
                                                               Spacing="10"
                                                               IsVisible="{Binding TextOnRight}">
                                                        <Image Source="{Binding Image}"
                                                              Width="{Binding ImageWidth}"
                                                              Height="{Binding ImageHeight}"/>
                                                        <StackPanel VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Title}"
                                                                     FontFamily="{StaticResource LilitaOne}"
                                                                     FontSize="18"
                                                                     Foreground="White"
                                                                     TextAlignment="Left"/>
                                                            <TextBlock Text="{Binding Description}"
                                                                     FontFamily="{StaticResource LilitaOne}"
                                                                     FontSize="14"
                                                                     Foreground="White"
                                                                     TextAlignment="Left"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                </Panel>
                                            </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </Canvas>
                    </Border>

                </Grid>
            </Viewbox>
        </ScrollViewer>
    </Border>

</UserControl>
